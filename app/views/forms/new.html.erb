<div>
  Create your form
  All fields will be text fields for now.
</div>

<div class="form-group navbar-form navbar-left search-form">
  <%= form_tag action: :create do %>
    <% @inputs.times do |i| %>
      <div class="input-group">
        <%= label_tag "field_#{i}", "Field #{i}:" %>
        <%= text_field_tag("field_#{i}", '', class: "form-control") %>
      </div>
      <br />
    <% end %>

    <br />

    <%= submit_tag 'Create Form', class: 'btn btn-primary' %>
  <% end %>

</div>
